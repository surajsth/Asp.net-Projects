@{
    ViewData["Title"] = "Signup";
}
<div class="row justify-content-md-center">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h3>Signup</h3>
                <hr/>
                <form method="post">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Enter Email</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="writemailhere.com">
                    </div>
                    <div class="mb-3">
                        <label for="fullname" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullname" placeholder="Suraj Shrestha">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password">
                    </div>
                    <div class="mb-3">
                        <label for="Cpassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="Cpassword">
                    </div>
                    <hr/>
                    <button type="submit" class="btn btn-primary">Signup</button>
                </form>
            </div>
        </div>
    </div>
</div>